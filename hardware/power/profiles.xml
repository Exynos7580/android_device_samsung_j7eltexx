                    <timer_rate>20000</timer_rate>
                    <timer_slack>20000</timer_slack>
                </governor_data>
            </cluster2>
        </cpu>
        <cpusets>
            <enabled>true</enabled>
            <default>0-3</default>
            <foreground>0-3</foreground>
            <background>0-1</background>
            <system_background>0-1</system_background>
            <top_app>0-3</top_app>
        </cpusets>
        <gpu>
            <dvfs>
                <freq_max>440</freq_max>
            </dvfs>
            <highspeed>
